      <div class="12u">

        <!-- Header -->
        <div id="header">

          <!-- Logo -->
          <div id="logo">
            <h1><a href="#">Hammersmith Ukulele Group</a></h1>
            <span class="byline">A bunch of people meeting fortnightlishly for a strum</span>
          </div>
          <!-- /Logo -->

          <!-- Nav -->
          <nav id="nav">
            <ul>
              <li><a href="#who">Who</a></li>
              <li><a href="#where">Where</a></li>
              <li><a href="#when">When</a></li>
              <li><a href="#what">What</a></li>
            </ul>
